<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="CONSOLE_LOG_CHARSET">UTF-8</Property>
        <Property name="FILE_LOG_CHARSET">UTF-8</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="MODULE">${spring:spring.application.name}</Property>
        <Property name="LOG_FILE">log</Property>
        <Property name="LOG_PATH">logs/${MODULE}</Property>
        <Property name="CONSOLE_LOG_PATTERN">%d{${sys:LOG_DATEFORMAT_PATTERN}} %clr{${MODULE}}{yellow} %clr{${LOG_LEVEL_PATTERN}} %clr{%pid}{magenta} --- [%15.15t] %clr{%-40.40c{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${MODULE} ${LOG_LEVEL_PATTERN} %pid --- [%t] %-40.40c{1.} : %m%n${LOG_EXCEPTION_CONVERSION_WORD}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}" charset="${CONSOLE_LOG_CHARSET}"/>
        </Console>

        <RollingRandomAccessFile name="ExternalFile" fileName="${LOG_PATH}/${LOG_FILE}.log"
                                 filePattern="${LOG_PATH}/$${date:yyyy-MM}/${LOG_FILE}-%d{yyyy-MM-dd}-%i.log.gz"
                                 immediateFlush="false">
            <PatternLayout pattern="${FILE_LOG_PATTERN}" charset="${FILE_LOG_CHARSET}"/>

            <Policies>
                <!-- rollover on startup -->
                <OnStartupTriggeringPolicy/>
                <!-- OR rollover when the file reaches size -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <!-- OR rollover filePattern i.e. daily for yyyy-MM-dd -->
                <TimeBasedTriggeringPolicy maxRandomDelay="30"/>
            </Policies>

            <DefaultRolloverStrategy>
                <Delete basePath="${LOG_PATH}" maxDepth="2">
                    <!-- delete files pattern glob -->
                    <IfFileName glob="*/*.log.gz">
                        <IfAny>
                            <!-- delete if older than age -->
                            <IfLastModified age="7d"/>
                            <!-- OR delete if total size greater than exceeds -->
                            <IfAccumulatedFileSize exceeds="100 MB"/>
                            <!-- OR delete if number of files greater than exceeds -->
                            <IfAccumulatedFileCount exceeds="10"/>
                        </IfAny>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <!-- async appender -->
        <Async name="Async" includeLocation="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ExternalFile"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="org.apache.catalina.startup.DigesterFactory" level="error"/>
        <Logger name="org.apache.catalina.util.LifecycleBase" level="error"/>
        <Logger name="org.apache.coyote.http11.Http11NioProtocol" level="warn"/>
        <Logger name="org.apache.sshd.common.util.SecurityUtils" level="warn"/>
        <Logger name="org.apache.tomcat.util.net.NioSelectorPool" level="warn"/>
        <Logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="error"/>
        <Logger name="org.hibernate.validator.internal.util.Version" level="warn"/>
        <Logger name="org.springframework.boot.actuate.endpoint.jmx" level="warn"/>

        <Root level="info">
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>
